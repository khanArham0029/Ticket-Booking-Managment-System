<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.example.demo.ViewTripDetails" alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/16"
      style="-fx-background-color: #f0f8ff;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Trip details labels -->
    <Label fx:id="tripNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="tripDescriptionLabel" style="-fx-font-size: 16px;"/>
    <Label fx:id="ticketPriceLabel" style="-fx-font-size: 16px;"/>
    <Label fx:id="tripLocationLabel" style="-fx-font-size: 16px;"/>
    <Label fx:id="departureTimeLabel" style="-fx-font-size: 16px;"/>
    <Label fx:id="arrivalTimeLabel" style="-fx-font-size: 16px;"/>
</VBox>
