<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.example.demo.Add_Trips" alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/16">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER" spacing="20">
        <Button text="Toggle Sidebar" onAction="#onToggleSidebar" style="-fx-background-color: #2c3e50; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-height: 40px;" />
        <Button text="Settings" onAction="#onSettingsClick" style="-fx-background-color: #2c3e50; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-height: 40px;" />
        <Button text="Dashboard" onAction="#onDashboardClick" style="-fx-background-color: #2c3e50; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-height: 40px;" />
        <Button text="Logout" onAction="#onLogoutClick" style="-fx-background-color: #c0392b; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-height: 40px;" />
    </HBox>

    <VBox alignment="CENTER" spacing="10">
        <Label text="Add Trip" style="-fx-font-size: 20px;" />

        <TextField fx:id="tripNameField" promptText="Trip Name" />
        <TextField fx:id="tripDescriptionField" promptText="Trip Description" />
        <TextField fx:id="ticketPriceField" promptText="Ticket Price" />
        <TextField fx:id="tripLocationField" promptText="Trip Location" />
        <TextField fx:id="departureTimeField" promptText="Departure Time" />
        <TextField fx:id="arrivalTimeField" promptText="Arrival Time" />

        <Button text="Add Trip" onAction="#onAddTripClick" style="-fx-background-color: #3498db; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 150px; -fx-pref-height: 40px;" />

        <Label fx:id="statusLabel" style="-fx-font-size: 14px; -fx-text-fill: #ff0000;" />
    </VBox>
</VBox>
