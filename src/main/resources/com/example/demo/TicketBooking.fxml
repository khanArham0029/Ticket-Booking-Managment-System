<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.example.demo.TicketBooking" alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/16"
      style="-fx-background-color: #f0f8ff;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Top label -->
    <Label text="Available Trips" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #008080;"/>

    <!-- Trip list -->
    <ListView fx:id="tripListView" prefWidth="400" prefHeight="300" />

    <!-- Buttons -->
    <HBox spacing="20">
        <Button text="View Trip Details" onAction="#onViewTripDetailsClick"
                style="-fx-background-color: #3498db; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 150px; -fx-pref-height: 40px;" />

        <Button text="Back to Menu" onAction="#onBackToMenuClick"
                style="-fx-background-color: #2c3e50; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 150px; -fx-pref-height: 40px;" />
    </HBox>
</VBox>
